---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';

const posts = (await getCollection('blog'))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 5);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<section class="hero">
				<div class="avatar-container">
					<img src="/avatar.png" alt="Kristian Bjørnebråten" class="avatar" width="140" height="140" />
				</div>
				<h1>Kristian Bjørnebråten</h1>
				<p class="tagline">Paid to wrangle clouds. Staying up to build things.</p>
				<p class="intro">
					13 years in IT. I design Azure infrastructure for enterprises and build side projects 
					when the sun goes down. Currently exploring how AI agents can make developers more productive.
				</p>
			</section>

			<!-- 
			START HERE SECTION (uncomment when you have 3+ posts)
			<section class="start-here">
				<h2>Start Here</h2>
				<p class="start-here-intro">New? These posts will give you a good overview:</p>
				<div class="featured-posts">
					<a href="/blog/tidwerk/" class="featured-post">
						<span class="featured-number">1</span>
						<span class="featured-title">Building TidWerk</span>
					</a>
				</div>
			</section>
			-->

			<section class="currently">
				<h2>What I'm Working On</h2>
				<div class="project-cards">
					<a href="/blog/tidwerk/" class="project-card">
						<span class="project-icon">&#9201;</span>
						<div class="project-info">
							<h3>TidWerk</h3>
							<p>Time-tracking app for consultants. SvelteKit + TypeScript + Turso.</p>
						</div>
						<span class="project-arrow">&rarr;</span>
					</a>
					<div class="project-card">
						<span class="project-icon">&#9881;</span>
						<div class="project-info">
							<h3>MCP Servers</h3>
							<p>Experimenting with AI agents and Model Context Protocol integrations.</p>
						</div>
					</div>
				</div>
			</section>

			<section class="tech-section">
				<h2>Tech I Use</h2>
				<div class="tech-grid">
					<span class="tech-pill"><img src="https://cdn.simpleicons.org/microsoftazure" alt="" /> Azure</span>
					<span class="tech-pill"><img src="https://cdn.simpleicons.org/terraform" alt="" /> Terraform</span>
					<span class="tech-pill"><img src="https://cdn.simpleicons.org/typescript" alt="" /> TypeScript</span>
					<span class="tech-pill"><img src="https://cdn.simpleicons.org/svelte" alt="" /> Svelte</span>
					<span class="tech-pill"><img src="https://cdn.simpleicons.org/python" alt="" /> Python</span>
					<span class="tech-pill"><img src="https://cdn.simpleicons.org/go" alt="" /> Go</span>
					<span class="tech-pill"><img src="https://cdn.simpleicons.org/gitlab" alt="" /> GitLab</span>
					<span class="tech-pill"><img src="https://cdn.simpleicons.org/githubactions" alt="" /> GitHub Actions</span>
					<span class="tech-pill"><img src="https://cdn.simpleicons.org/cloudflare" alt="" /> Cloudflare</span>
					<span class="tech-pill"><img src="https://cdn.simpleicons.org/anthropic" alt="" /> Claude</span>
					<span class="tech-pill"><img src="https://cdn.simpleicons.org/openai" alt="" /> OpenAI</span>
					<span class="tech-pill"><img src="https://cdn.simpleicons.org/googlegemini" alt="" /> Gemini</span>
					<span class="tech-pill">
						<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="var(--color-accent)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="tech-icon"><rect x="2" y="2" width="20" height="8" rx="2" ry="2"></rect><rect x="2" y="14" width="20" height="8" rx="2" ry="2"></rect><line x1="6" y1="6" x2="6.01" y2="6"></line><line x1="6" y1="18" x2="6.01" y2="18"></line></svg>
						MCP Servers
					</span>
				</div>
			</section>

			<section class="latest-posts">
				<div class="section-header">
					<h2>Writing</h2>
					<a href="/blog" class="view-all">All posts &rarr;</a>
				</div>
				<ul class="post-list">
					{posts.map((post) => (
						<li>
							<a href={`/blog/${post.id}/`} class="post-link">
								<h3 class="post-title">{post.data.title}</h3>
								<span class="post-date"><FormattedDate date={post.data.pubDate} /></span>
							</a>
						</li>
					))}
				</ul>
				{posts.length === 0 && (
					<p class="no-posts">First post coming soon.</p>
				)}
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	main {
		width: 100%;
		max-width: 720px;
		margin: 0 auto;
		padding: 0 1rem;
	}

	/* Hero Section */
	.hero {
		text-align: center;
		padding: 4rem 0 3rem;
	}

	.avatar-container {
		margin-bottom: 1.5rem;
	}

	.avatar {
		border-radius: 50%;
		border: 3px solid var(--color-accent);
		padding: 4px;
		background: var(--color-bg-alt);
		box-shadow: 0 0 30px var(--color-accent-glow);
		transition: transform 0.3s ease;
	}

	.avatar:hover {
		transform: scale(1.05);
	}

	h1 {
		font-size: 2.5rem;
		margin: 0 0 0.5rem;
		color: var(--color-text-main);
	}

	.tagline {
		font-size: 1.25rem;
		color: var(--color-accent);
		margin: 0 0 1.5rem;
		font-weight: 500;
	}

	.intro {
		font-size: 1.1rem;
		color: var(--color-text-muted);
		line-height: 1.7;
		max-width: 540px;
		margin: 0 auto;
	}

	/* Section Headers */
	section h2 {
		font-size: 1.1rem;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		color: var(--color-text-muted);
		margin: 0 0 1rem;
		font-weight: 600;
	}

	/* Currently Working On */
	.currently {
		padding: 2rem 0;
	}

	.project-cards {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}

	.project-card {
		display: flex;
		align-items: center;
		gap: 1rem;
		padding: 1rem 1.25rem;
		background: var(--color-bg-alt);
		border-radius: 12px;
		border: 1px solid var(--color-border);
		text-decoration: none;
		transition: border-color 0.2s ease, transform 0.2s ease;
	}

	a.project-card:hover {
		border-color: var(--color-accent);
		transform: translateX(4px);
	}

	.project-icon {
		font-size: 1.5rem;
		width: 2.5rem;
		height: 2.5rem;
		display: flex;
		align-items: center;
		justify-content: center;
		background: var(--color-bg);
		border-radius: 8px;
		flex-shrink: 0;
	}

	.project-info {
		flex: 1;
	}

	.project-info h3 {
		font-size: 1rem;
		margin: 0 0 0.25rem;
		color: var(--color-text-main);
		font-weight: 600;
	}

	.project-info p {
		font-size: 0.875rem;
		margin: 0;
		color: var(--color-text-muted);
	}

	.project-arrow {
		color: var(--color-accent);
		font-size: 1.25rem;
		opacity: 0;
		transition: opacity 0.2s ease;
	}

	a.project-card:hover .project-arrow {
		opacity: 1;
	}

	/* Tech Section */
	.tech-section {
		padding: 2rem 0;
	}

	.tech-grid {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
	}

	.tech-pill {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		background: var(--color-bg-alt);
		color: var(--color-text-muted);
		padding: 0.4rem 0.9rem;
		border-radius: 20px;
		font-size: 0.85rem;
		border: 1px solid var(--color-border);
		transition: border-color 0.2s ease;
		text-decoration: none;
	}

	.tech-pill:hover {
		border-color: var(--color-text-muted);
	}

	.tech-pill img,
	.tech-pill svg {
		width: 16px;
		height: 16px;
		object-fit: contain;
	}

	/* Latest Posts */
	.latest-posts {
		padding: 2rem 0 4rem;
	}

	.section-header {
		display: flex;
		justify-content: space-between;
		align-items: baseline;
		margin-bottom: 1rem;
	}

	.view-all {
		color: var(--color-accent);
		text-decoration: none;
		font-size: 0.875rem;
		font-weight: 500;
	}

	.view-all:hover {
		text-decoration: underline;
	}

	.post-list {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.post-list li {
		border-bottom: 1px solid var(--color-border);
	}

	.post-list li:last-child {
		border-bottom: none;
	}

	.post-link {
		display: flex;
		justify-content: space-between;
		align-items: baseline;
		text-decoration: none;
		padding: 1rem 0;
		transition: padding-left 0.2s ease;
	}

	.post-link:hover {
		padding-left: 0.5rem;
	}

	.post-link:hover .post-title {
		color: var(--color-accent);
	}

	.post-title {
		margin: 0;
		font-size: 1rem;
		color: var(--color-text-main);
		font-weight: 500;
		transition: color 0.2s ease;
	}

	.post-date {
		font-size: 0.85rem;
		color: var(--color-text-muted);
		white-space: nowrap;
		margin-left: 1rem;
	}

	.no-posts {
		color: var(--color-text-muted);
		font-style: italic;
	}

	/* Start Here Section (styles ready for when you uncomment the HTML) */
	.start-here {
		padding: 2rem 0;
		border-top: 1px solid var(--color-border);
	}

	.start-here-intro {
		color: var(--color-text-muted);
		margin-bottom: 1rem;
	}

	.featured-posts {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.featured-post {
		display: flex;
		align-items: center;
		gap: 1rem;
		padding: 0.75rem 1rem;
		background: var(--color-bg-alt);
		border-radius: 8px;
		text-decoration: none;
		transition: transform 0.2s ease;
	}

	.featured-post:hover {
		transform: translateX(4px);
	}

	.featured-number {
		width: 1.5rem;
		height: 1.5rem;
		display: flex;
		align-items: center;
		justify-content: center;
		background: var(--color-accent);
		color: white;
		border-radius: 50%;
		font-size: 0.75rem;
		font-weight: 600;
	}

	.featured-title {
		color: var(--color-text-main);
		font-weight: 500;
	}

	/* Responsive */
	@media (max-width: 600px) {
		.hero {
			padding: 2.5rem 0 2rem;
		}

		.avatar {
			width: 100px;
			height: 100px;
		}

		h1 {
			font-size: 1.75rem;
		}

		.tagline {
			font-size: 1rem;
		}

		.intro {
			font-size: 1rem;
		}

		section h2 {
			font-size: 1rem;
		}

		.project-card {
			padding: 0.875rem 1rem;
		}

		.project-icon {
			width: 2rem;
			height: 2rem;
			font-size: 1.25rem;
		}

		.project-info h3 {
			font-size: 0.95rem;
		}

		.project-info p {
			font-size: 0.8rem;
		}

		.tech-pill {
			padding: 0.3rem 0.7rem;
			font-size: 0.8rem;
		}

		.post-link {
			flex-direction: column;
			align-items: flex-start;
			gap: 0.25rem;
		}

		.post-date {
			margin-left: 0;
		}
	}
</style>
